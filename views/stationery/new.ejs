<% layout("/layouts/boilerplate.ejs") %>

    <div class="container mt-5">
        <h1 class="mb-4">Create New Stationary Item Category</h1>

        <!-- Form for creating new stationary -->
        <form action="/stationery" method="POST" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="stationery[title]" required>
                <div class="invalid-feedback">
                    Please enter a title.
                </div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image URL (Optional)</label>
                <input type="text" class="form-control" id="image" name="stationery[image]">
                <small class="form-text text-muted">Leave empty for default image.</small>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Save Category</button>
        </form>
    </div>